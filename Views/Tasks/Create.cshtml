@model WebToDoApp.Models.TaskItem

@{
    ViewData["Title"] = "Create a New Task";
}

<h1>Create New Task</h1>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control"/>
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DueDate"></label>
        <input asp-for="DueDate" class="form-control" type="date" />
        <span asp-validation-for="DueDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <input asp-for="Description" class="form-control" type="text" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <br />

    <div class="d-flex justify-content-center">
        <button type="submit" class="btn btn-primary mr-2">Create Task</button>
    </div>
</form>

<div class="d-flex justify-content-center mt-2">
    <a asp-controller="Tasks" asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>