@model WebToDoApp.Models.TaskItem

@{
    ViewData["Title"] = "Edit Task";
}

<h1>Edit Task</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id"/>

    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DueDate"></label>
        <input asp-for="DueDate" class="form-control" type="date" />
        <span asp-validation-for="DueDate" class="text-danger"> </span>
    </div>

    <br />

    <div class="form-group">
        <label asp-for="Description"></label>
        <input asp-for="Description" class="form-control auto-resize-input" type="text" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <br />
    <div class="d-flex justify-content-center">
        <button type="submit" class="btn btn-primary">Save Changes</button>
    </div>
</form>

<div class="d-flex justify-content-center mt-2">
    <a asp-controller="Tasks" asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        const inputs = document.querySelectorAll('.auto-resize-input');

        inputs.forEach(input => {
            input.addEventListener('input', function () {
                this.style.width = 'auto';
                this.style.width = (this.scrollWidth + 2) + 'px';
            });

            // Initial resize to fit the default value
            input.style.width = 'auto';
            input.style.width = (input.scrollWidth + 2) + 'px';
        });
    });
</script>
